  "author": "Deepak Yadav",
  "license": "MIT",
  "dependencies": {
    "@antfu/ni": "^23.3.1",
    "autoprefixer": "^10.4.21",
    "axios": "^1.8.2",
    "chalk": "^4.1.2",
    "clsx": "^2.1.1",
    "commander": "^9.4.1",
    "framer-motion": "^12.4.10",
    "fs-extra": "^10.1.0",
    "ora": "^5.4.1",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.9",
    "rimraf": "^3.0.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "exports": {
    "./tailwind": "./dist/tailwind.js"
  }
