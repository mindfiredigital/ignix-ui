{
  "name": "@mindfiredigital/ignix-ui",
  "version": "1.0.4",
  "private": false,
  "description": "CLI tool for Ignix UI component library",
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ignix-ui": "./dist/index.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist",
    " README.md",
    "themes",
    "types"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "ignix-ui",
    "cli",
    "components",
    "ui",
    "animation"
